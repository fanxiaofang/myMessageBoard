  <view class="header">
    <text>{{scrollHeightRpx}}</text>
    <view wx:if="{{userInfo.boardName}}">{{userInfo.boardName}}</view>
    <view wx:else>加载中</view>
    <button type="primary" bindtap="addMessage">我要留言</button>
  </view>

  <view class="message-item" wx:for="{{messages}}" wx:key="_id" wx:for-index="index" wx:for-item="item">
      <text style="font-size: 50rpx;">{{item.seqNo}}. </text>
      <text style="font-size: 50rpx;">{{item.content}} </text>
      <text class="time" style="font-size: 40rpx; color: #999">{{item.simpleTime}}</text>
  </view>


