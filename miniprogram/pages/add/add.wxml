<!-- 留言输入区域 -->
<view class="message-box">
  <textarea 
    class="message-input"
    placeholder="请输入留言内容" 
    bindinput="onInput" 
    value="{{content}}" 
    maxlength="500" 
    auto-focus="">
  </textarea>
  <button 
    class="submit-btn"
    bindtap="submitMessage" 
    disabled="{{!content}}"
  >发表</button>
</view>

