.message-box {
  height:45vh; /*高度一半*/
  width: 90vw; /*宽度90%*/
  margin: 0 auto; /* 水平居中 */


  padding: 16rpx;
  background-color: #fff; /* 白色背景 */
  border-radius: 16rpx;   /* 圆角 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 轻微阴影 */
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 输入框和按钮的间距 */
}

.message-input {
  width: 100%;
  flex: 1;
  min-height: 0;
  padding: 12rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  resize: none;
  outline: none;
  background-color: #fafafa;
  box-sizing: border-box;
}

.message-input::placeholder {
  color: #bbb;
}

.submit-btn {
  height: 80rpx;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
  background-color: #4f994f;
  color: white;
  font-size: 30rpx;
  border-radius: 30rpx;
  border: none;
  transition: background-color 0.3s;
}

.submit-btn:disabled {
  background-color: #ccc;
  color: #888;
}

.submit-btn:not(:disabled):active {
  background-color: #178c16;
}

/* 提示词 */
.tips-wrapper {
  width: 90vw;
  margin: 20rpx auto;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tip-item {
  background-color: #e0f0e0;
  color: #4f994f;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  user-select: none;
  cursor: pointer;
  transition: background-color 0.3s;
}

.tip-item:active {
  background-color: #4f994f;
  color: white;
}